{{>partials/header}}

<fieldset>
  <legend>Adicionar Novo Usuário</legend>
  <form action="/novo-usuario" method="post">
    <input type="text" name="firstName" placeholder="Digite seu nome" />
    <br />
    <input type="text" name="lastName" placeholder="Digite seu sobrenome" />
    <br />
    <input type="email" name="email" placeholder="Digite seu email" />
    <br />
    <input type="text" name="age" placeholder="Digite sua idade" />
    <br />
    <input
      type="text"
      name="interests"
      placeholder="Digite seus interesses (separados por vírgula)"
    />
    <br>
    <input type="submit" value="Inserir" />
    <br />
  </form>
</fieldset>

<br />

<h2>Usuários</h2>

<ul>
    {{#usuarios}}
        <li>{{ name.firstName }} - {{ age }}</li>
    {{/usuarios}}
</ul>

{{>partials/footer}}
